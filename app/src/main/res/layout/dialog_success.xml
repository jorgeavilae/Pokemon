<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background_success_dialog">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_ok_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_text_margin_outer"
        android:drawableEnd="@drawable/ic_check_circle"
        android:drawablePadding="@dimen/dialog_text_margin_inner"
        android:textAppearance="@style/MyFontStyles.Body1.Monospace"
        android:textColor="?attr/colorOnPrimary"
        tools:text="Successful update" />
</LinearLayout>