<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_container_margin">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/pokemon_image_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/pikachu_official" />

    <ImageView
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/background_item"
        android:contentDescription="@string/background_image_content_description"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintEnd_toEndOf="@id/item_image"
        app:layout_constraintStart_toStartOf="@id/item_image"
        app:layout_constraintTop_toTopOf="@id/item_image"
        tools:src="@drawable/pikachu_official" />

    <TextView
        android:id="@+id/item_name"
        style="@style/FontRegularBold.XXL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_text_margin_outer"
        android:layout_marginBottom="@dimen/item_text_margin_inner"
        app:layout_constraintBottom_toTopOf="@id/item_specie"
        app:layout_constraintStart_toStartOf="@id/item_image"
        tools:text="Pikachu" />

    <TextView
        android:id="@+id/item_specie"
        style="@style/FontRegularAllCaps.L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_text_margin_outer"
        android:layout_marginBottom="@dimen/item_text_margin_outer"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintStart_toStartOf="@id/item_image"
        tools:text="Pikachu" />

    <TextView
        android:id="@+id/item_weight"
        style="@style/FontRegularAllCaps.L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_text_margin_inner"
        android:layout_marginBottom="@dimen/item_text_margin_outer"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintStart_toEndOf="@id/item_specie"
        tools:text="84" />


</androidx.constraintlayout.widget.ConstraintLayout>