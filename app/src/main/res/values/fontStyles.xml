<resources>
    <color name="textColorWhite">#ffffff</color>
    <color name="textColorLight">#606070</color>
    <color name="textColorBlack">#000000</color>
    <color name="textColorRed">#ff0000</color>
    <color name="textColorDarkRed">#cc0000</color>

    <style name="FontRegular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="FontRegularBold" parent="FontRegular">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontRegularAllCaps" parent="FontRegular">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FontRegularBoldAllCaps" parent="FontRegular">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FontRegular.M" parent="FontRegular">
        <item name="android:textSize">@dimen/textSizeM</item>
    </style>

    <style name="FontRegularBold.XL" parent="FontRegularBold">
        <item name="android:textSize">@dimen/textSizeXL</item>
    </style>

    <style name="FontRegular.M.Subtitle" parent="FontRegular.M">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">@dimen/textSizeM</item>
    </style>

    <style name="FontRegular.XXL" parent="FontRegular">
        <item name="android:textSize">@dimen/textSizeXXL</item>
    </style>

    <style name="FontRegular.XXL.Title" parent="FontRegular.XXL">
        <item name="android:textSize">@dimen/textSizeXXL</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>



</resources>