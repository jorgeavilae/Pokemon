<resources>
    <color name="textColorWhite">#ffffff</color>
    <color name="textColorLight">#606070</color>
    <color name="textColorBlack">#000000</color>
    <color name="textColorRed">#ff0000</color>
    <color name="textColorDarkRed">#cc0000</color>

    <style name="MyFontStyles.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontFamily">@font/vt323</item>
        <item name="android:fontFamily">@font/vt323</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="MyFontStyles.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/vt323</item>
        <item name="android:fontFamily">@font/vt323</item>
        <item name="android:textSize">@dimen/textSizeH1</item>
    </style>

    <style name="MyFontStyles.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/vt323</item>
        <item name="android:fontFamily">@font/vt323</item>
        <item name="android:textSize">@dimen/textSizeH2</item>
    </style>

    <style name="MyFontStyles.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/vt323</item>
        <item name="android:fontFamily">@font/vt323</item>
        <item name="android:textSize">@dimen/textSizeH3</item>
    </style>

    <style name="MyFontStyles.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
