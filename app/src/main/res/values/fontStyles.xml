        <item name="android:textSize">@dimen/textSizeH6</item>
    </style>

    <style name="MyFontStyles.Subtitle1.AllCaps" parent="MyFontStyles.Subtitle1">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyFontStyles.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
